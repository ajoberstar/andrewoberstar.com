---
redirect_from:
    - /blog
    - /blog/index.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <id>{{ site.url }}</id>
    <title>Andrew Oberstar</title>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <author>
        <name>Andrew Oberstar</name>
        <email>ajoberstar@gmail.com</email>
        <uri>http://www.andrewoberstar.com</uri>
    </author>
    <link rel="self" href="{{ site.url }}/feed.xml" />
    <link rel="alternate" href="{{ site.url }}"/>
    {% assign categories = "" %}
    {% for post in site.posts %}
        {% if categories == "" %}
            {% assign categories = post.category %}
        {% endif %}
        {% unless categories contains post.category %}
            {% assign categories = categories | append:'|' | append: post.category %}
        {% endunless %}
    {% endfor %}
    {% assign categories = categories | split:'|' | sort %}
    {% for category in categories %}
        <category term="{{ category }}" />
    {% endfor %}
    {% for post in site.posts limit:20 %}
        <entry>
            <id>{{ site.url }}{{ post.url }}</id>
            <title>{{ post.title | xml_escape }}</title>
            <category term="{{ post.category }}"/>
            <updated>{{ post.date | date_to_xmlschema }}</updated>
            {% if post.external_url %}
                <link rel="alternate" href="{{ post.external_url }}"/>
            {% else %}
                <link rel="alternate" href="{{ site.url }}{{ post.url }}"/>
            {% endif %}
            <content type="html">{{ post.content | xml_escape }}</content>
        </entry>
    {% endfor %}
</feed>
